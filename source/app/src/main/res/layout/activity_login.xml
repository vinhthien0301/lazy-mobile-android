<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/manage_fragment_main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:id="@+id/ln_main"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi muốn "
                android:textColor="@color/color_a"
                android:textSize="@dimen/text_font_size_small_medium" />

            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="TẠO TÀI KHOẢN MỚI"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_font_size_small_medium" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:textColor="@color/color_a"
            android:textColorHint="@color/color_c"
            android:hint="Email"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_err_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email không hợp lệ."
            android:visibility="gone"
            android:layout_marginBottom="10px"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_font_size_small_medium" />

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a"
            android:textColorHint="@color/color_c"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_err_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu không được rỗng."
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_font_size_small_medium" />

        <TextView
            android:id="@+id/tv_forget_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/forgot_password"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_font_size_medium" />
        <Button
            android:id="@+id/btn_log_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:enabled="false"
            android:text="Đăng nhập"
            android:background="@drawable/button_state" />
    </LinearLayout>
</RelativeLayout>